{
  "name": "relationship-app",
  "type": "module",
  "title": "Relationship App",
  "description": "A Foundry VTT module for creating and managing relationship graphs between actors and other entities.",
  "version": "0.9.0",
  "author": "Your Name",
  "minimumCoreVersion": "13",
  "compatibleCoreVersion": "13",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-all": "npm run type-check && npm run lint && npm run format",
    "lint": "eslint --config eslint.config.cjs --no-ignore \"src/**/*.{ts,js}\" --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js} --fix",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "cytoscape": "^3.32.1",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jquery": "^3.5.32",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "fvtt-types": "npm:@league-of-foundry-developers/foundry-vtt-types@^13.345.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3",
    "vite": "^7.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "crlf"
  }
}