{
  "name": "relationship-app",
  "type": "module",
  "title": "Relationship App",
  "description": "A Foundry VTT module for creating and managing relationship graphs between actors and other entities.",
  "version": "0.28.0",
  "author": "Your Name",
  "minimumCoreVersion": "13",
  "compatibleCoreVersion": "13",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-all": "npm run type-check && npm run svelte-check && npm run lint && npm run css-lint && npm run format",
    "lint": "eslint --config eslint.config.cjs --no-ignore \"src/**/*.{ts,js,svelte}\" --fix",
    "css-lint": "stylelint \"styles/**/*.css\" --fix",
    "type-check": "tsc --noEmit",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"styles/**/*.css\" --fix",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "cytoscape": "^3.32.1",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.13.8",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/cytoscape": "^3.21.9",
    "@types/jquery": "^3.5.32",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@xyflow/svelte": "^1.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-handlebars": "^1.0.4",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-svelte": "^3.12.3",
    "fvtt-types": "^13.346.0-beta.20250812191140",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "svelte-check": "^4.3.1",
    "svelte-eslint-parser": "^1.3.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.3.3",
    "vite": "^7.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "crlf"
  }
}